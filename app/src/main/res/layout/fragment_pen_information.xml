<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.dexcom.democonnectedpen.ui.fragments.peninformation.FragmentPenInformationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/pen_information_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_uuid"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_battery"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_manufacturer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_lastsync"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_software_revision"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_serial_number"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_model_number"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_hardware_revision"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/pen_information_firmware_revision"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.Polaris.Header.Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/remove"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/synchronize"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
