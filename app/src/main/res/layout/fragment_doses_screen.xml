<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_connections_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFEEEDED">

    <TextView
        android:id="@+id/id_doses_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doses"
        android:textAppearance="@style/TextAppearance.Polaris.Headline5"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Connections card -->
    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Polaris.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/id_doses_label">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_doses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/id_doses_no_have"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/you_haven_t_any_doses_yet"
                android:textAppearance="@style/TextAppearance.Polaris.Header.Medium"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
