<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    
    <TextView
        android:id="@+id/manufacturer_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/manufacturer_name"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/manufacturer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Generic White Label Device Maker" />

    <TextView
        android:id="@+id/model_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/model_name"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/model_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Generic Model Number" />

    <TextView
        android:id="@+id/serial_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serial_name"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Generic Serial Number" />

    <TextView
        android:id="@+id/hardware_revision_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hardware_revision"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/hardware_revision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Generic Hardware Revision" />

    <TextView
        android:id="@+id/firmware_revision_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firmware_revision"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/firmware_revision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Generic Firmware Revision" />

    <TextView
        android:id="@+id/software_revision_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/software_revision"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/software_revision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Generic Software Revision" />

    <TextView
        android:id="@+id/system_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system_id"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/system_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="123456-0123456789" />

    <TextView
        android:id="@+id/pnp_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pnp_id"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/pnp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="0-0000-0000-0000" />

    <Button
        android:id="@+id/disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/disconnect"/>
    





</LinearLayout>
